[alias]
  a             = add --verbose
	aa            = add --verbose --all
	au            = add --verbose --update
	b             = branch --verbose --verbose
	ba            = branch --verbose --verbose --all
	br            = branch --verbose --verbose --remotes
	ch            = checkout
	cl            = clone --verbose
	c             = commit --verbose
	ca            = commit --verbose --all
	alias         = config --get-regexp ^alias[.]
	core          = config --get-regexp ^core[.]
	user          = config --get-regexp ^user[.]
	d             = diff
	ds            = diff --staged
  dcop          = !git diff --name-only develop | grep .rb | xargs bundle exec rubocop --force-exclusion
  dspec         = !git diff --name-only develop spec | grep _spec.rb | xargs bundle exec rspec
	l             = log --oneline --max-count=10
	la            = log --oneline
	ls            = log --oneline --max-count=10
	lm            = log --oneline --max-count=20
	ll            = log --oneline --max-count=40
	m             = merge --verbose --log --no-ff
	r             = remote --verbose
	sh            = show --oneline
	st            = stash
	s             = status
	ss            = status --short
	sl            = status --long
	t             = tag
	update        = !git pull --all && git gc --auto

[color "diff"]
	frag          = bold blue

[commit]
	gpgsign       = true

[core]
	editor        = vim
	pager         = diff-so-fancy | less --tabs=2

[credential]
	helper        = osxkeychain

[diff-so-fancy]
	first-run     = false

[fetch]
	prune         = true
	pruneTags     = true

[merge]
	conflictstyle = diff3

[push]
	default       = simple

[user]
	name          = Richard E. Dodson
